<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <ImageView
        android:id="@+id/robot_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"
        android:layout_below="@id/robot_tv_date"
       />
    <TextView
        android:id="@+id/robot_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxEms="13"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tv_shape"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/robot_iv"
        android:layout_alignTop="@+id/robot_iv"/>

    <TextView
        android:id="@+id/robot_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2020年2月3日    15:15:15"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        android:textSize="10sp"
        />

</RelativeLayout>